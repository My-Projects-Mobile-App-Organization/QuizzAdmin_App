<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:id="@+id/qa_detail_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/llButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <Button
            android:layout_weight="1"
            android:id="@+id/btnAddQuesDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/btnCancelAddQuesDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toTopOf="@+id/llButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qa_detail_toolbar"
        >

        <EditText
            android:id="@+id/edtNameQues"
            android:inputType="textMultiLine"
            android:ems="10"
            android:maxLines="5"
            android:lines="2"
            android:textColor="@color/black"
            android:hint="question"
            android:backgroundTint="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/edtOptionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="optionA"
            android:layout_marginBottom="15sp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/edtOptionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="optionB"
            android:layout_marginBottom="15sp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/edtOptionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="optionC"
            android:layout_marginBottom="15sp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/edtOptionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="optionD"
            android:layout_marginBottom="15sp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"
            />
        <EditText
            android:id="@+id/edtAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:layout_marginBottom="15sp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>